{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "jsx": "react-native",
    "strict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"]
    }
  },
  "include": [
    "**/*.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "src",
    "src/images.d.ts"
  ]
}